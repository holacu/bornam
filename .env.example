# متغيرات البيئة المطلوبة لتشغيل بوت ماينكرافت التلغرام

# توكن بوت التلغرام (مطلوب)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# معرفات الأدمن (اختياري)
ADMIN_IDS=123456789,987654321

# إعدادات قاعدة البيانات
DATABASE_PATH=/tmp/minecraft_bot.db

# إعدادات النظام
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# إعدادات البوتات
MAX_BOTS_PER_USER=3
MAX_RECONNECT_ATTEMPTS=3

# إعدادات الأمان
RATE_LIMIT_MAX_REQUESTS=30
ADMIN_ONLY_MODE=false

# إعدادات المراقبة
MONITORING_ENABLED=true
ALERTS_ENABLED=true

# المنطقة الزمنية
TZ=Asia/Riyadh
