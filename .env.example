# ملف المتغيرات البيئية للنشر على Railway
# انسخ هذا الملف إلى .env وقم بتعبئة القيم المطلوبة

# ===== إعدادات بوت التلغرام =====
# توكن بوت التلغرام (مطلوب)
TELEGRAM_BOT_TOKEN=8147667148:AAEq8lfdIV42sOFwf3Cdf9ZYpinm3pUgkZU

# معرفات الأدمن (اختياري - يمكن إضافة عدة معرفات مفصولة بفواصل)
ADMIN_IDS=123456789,987654321

# ===== إعدادات البيئة =====
# بيئة التشغيل (development, production)
NODE_ENV=production

# منطقة الخادم (اختياري)
TZ=Asia/Riyadh

# ===== إعدادات قاعدة البيانات =====
# مسار قاعدة البيانات (سيتم إنشاؤها تلقائياً)
DATABASE_PATH=/tmp/minecraft_bot.db

# تفعيل النسخ الاحتياطي (true/false)
DATABASE_BACKUP_ENABLED=true

# ===== إعدادات الأمان =====
# الحد الأقصى لعدد البوتات لكل مستخدم
MAX_BOTS_PER_USER=3

# تفعيل وضع الأدمن فقط (true/false)
ADMIN_ONLY_MODE=false

# الحد الأقصى للطلبات في الدقيقة
RATE_LIMIT_MAX_REQUESTS=30

# ===== إعدادات الشبكة =====
# منفذ التطبيق (Railway سيحدده تلقائياً)
PORT=3000

# مهلة الاتصال بالثواني
CONNECTION_TIMEOUT=30

# عدد محاولات إعادة الاتصال
MAX_RECONNECT_ATTEMPTS=5

# ===== إعدادات السجلات =====
# مستوى السجلات (debug, info, warn, error)
LOG_LEVEL=info

# تفعيل سجلات الشات (true/false)
LOG_CHAT=true

# تفعيل سجلات الأوامر (true/false)
LOG_COMMANDS=true

# ===== إعدادات الأداء =====
# الحد الأقصى لاستخدام الذاكرة بالميجابايت
MAX_MEMORY_USAGE=512

# فترة تنظيف الذاكرة بالميلي ثانية
GC_INTERVAL=300000

# فترة تحديث الإحصائيات بالميلي ثانية
STATS_UPDATE_INTERVAL=60000

# ===== إعدادات البروكسي (اختياري) =====
# تفعيل البروكسي (true/false)
PROXY_ENABLED=false

# عنوان البروكسي
PROXY_HOST=

# منفذ البروكسي
PROXY_PORT=

# اسم المستخدم للبروكسي
PROXY_USERNAME=

# كلمة مرور البروكسي
PROXY_PASSWORD=

# ===== إعدادات المراقبة =====
# تفعيل مراقبة الأداء (true/false)
MONITORING_ENABLED=true

# فترة مراقبة الأداء بالميلي ثانية
MONITORING_INTERVAL=60000

# تفعيل التنبيهات (true/false)
ALERTS_ENABLED=true

# حد تنبيه استخدام الذاكرة (نسبة مئوية)
MEMORY_ALERT_THRESHOLD=80

# حد تنبيه معدل الأخطاء (أخطاء في الدقيقة)
ERROR_RATE_THRESHOLD=10

# ===== إعدادات التطوير (للاختبار فقط) =====
# وضع التطوير (true/false)
DEBUG_MODE=false

# وضع الاختبار (true/false)
TEST_MODE=false

# محاكاة الأخطاء (true/false)
SIMULATE_ERRORS=false

# ===== ملاحظات مهمة =====
# 1. لا تشارك ملف .env مع أي شخص
# 2. تأكد من إضافة .env إلى ملف .gitignore
# 3. في Railway، أضف هذه المتغيرات في قسم Variables
# 4. TELEGRAM_BOT_TOKEN مطلوب للتشغيل
# 5. يمكن ترك باقي المتغيرات فارغة لاستخدام القيم الافتراضية
